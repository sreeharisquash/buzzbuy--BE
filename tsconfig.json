{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./types", "src/types"]
  },
  "include": ["src/**/*.ts", "types/**/*.ts", "src/types"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
